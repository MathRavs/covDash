{
  "name": "cov-dash",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "commit": "cz",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "next": "15.0.4"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "eslint": "^8",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-next": "15.0.4",
    "commitizen": "^4.3.0",
    "cz-git": "^1.9.1",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "prettier": "^2.6.2",
    "stylelint": "^16.1.0",
    "stylelint-config-sass-guidelines": "^11.1.0"
  },
  "lint-staged": {
    "{apps,libs}/**/*.{html,ts}": "eslint --fix",
    "*.{css,scss}": "stylelint --fix",
    "*.{js,ts,css,scss,json,yml,md,sh}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "czConfig": "./commitlint.config.js",
      "useEmoji": true
    }
  }
}
